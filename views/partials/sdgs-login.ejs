<div class="sdgs-login">
    <% sdgs.forEach(function(sdg) { %>
        <label class="sdg-label">
            <input type="checkbox" name="sdg-selection" value="<%= sdg.id %>" class="visually-hidden">
            <picture>
              <source srcset="https://fdnd-agency.directus.app/assets/<%= sdg.icon.id %>?format=avif" type="image/avif">
              <source srcset="https://fdnd-agency.directus.app/assets/<%= sdg.icon.id %>?format=webp" type="image/webp">
              <img src="https://fdnd-agency.directus.app/assets/<%= sdg.icon.id %>" alt="<%= sdg.title %>" height="100" width="100" loading="lazy">
            </picture>
          </label>
    <% }) %>
</div>