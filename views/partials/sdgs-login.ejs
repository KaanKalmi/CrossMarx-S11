<div class="sdgs-login">
    <% sdgs.forEach(function(sdg) { %>
        <label class="sdg-label">
            <input type="checkbox" name="sdg-selection" value="<%= sdg %>" class="visually-hidden">
            <picture class="sdg-picture">
              <source srcset="https://fdnd-agency.directus.app/assets/<%= sdg.icon %>?format=avif" type="image/avif">
              <source srcset="https://fdnd-agency.directus.app/assets/<%= sdg.icon %>?format=webp" type="image/webp">
              <img src="https://fdnd-agency.directus.app/assets/<%= sdg.icon %>" alt="<%= sdg.title %>" height="100" width="100" loading="lazy">
            </picture>
          </label>

    <% }) %>
</div>